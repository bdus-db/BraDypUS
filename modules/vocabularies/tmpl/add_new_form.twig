<div class="row" id="{{ uid }}">

	<div class="col-sm-6 col-sm-offset-3">

		<div class="form-group">

			<label>{{ tr.get('voc') }}</label><br>

			{% if voc %}
			<input type="text" readonly="true" value="{{ voc }}" id="voc" class="form-control">
			{% else %}
			<select id="voc" class="form-control"  style="width:100%;" data-tags="true">
			{% for voc in all_vocs %}
				<option>{{ voc }}</option>
			{% endfor %}
			</select>
			{% endif %}
		</div>

		<div class="form-group">
			<label>{{ tr.get('item') }}</label>
			<input type="text" id="def" class="form-control">
		</div>
	</div>

</div>

{% if voc == false %}
<script>
	enhance.combobox($('select#voc'));
</script>
{% endif %}