<p class="lead">2. {{ tr.get('upload_file') }}</p>
<div class="form-group">
    <div class="col-sm-9 col-sm-offset-3">
      <div id="upload-{{ uid }}">ciao</div>
    </div>
</div>
    
<div id="fields_{{ uid }}" style="margin-top: 60px;"></div>
    
<script>
  api.fileUpload(
    $('#upload-{{ uid }}'),
    'controller.php?obj=file_ctrl&method=upload',
    {
      limitExtensions: ['geojson', 'json'],
      limit2one: true,
      complete: function(id, name, resp){
        if (resp.success){
          $('#fields_{{ uid }}')
            .load('controller.php?obj=import_geodata_ctrl&method=setFields&'
              + 'param[]={{ tb }}&'
              + 'param[]=' + resp.uploadDir + '/' + resp.filename + '.' + resp.ext
              );
        }
      }
    }
  
    );
  
</script>

