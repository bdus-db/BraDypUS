<fieldset>
	<span class="checklabel form-group">
		<input type="checkbox" name="adv[aa][(]" />
		<label>(</label>
	</span>

	<div class="form-group" style="width:300px;">
		<select class="fld form-control" name="adv[aa][fld]" style="width:100%">
			{% autoescape false %}{{ fields }}{% endautoescape %}
		</select>
	</div>

	<div class="form-group" style="width:200px;">
		<select class="operator form-control" name="adv[aa][operator]" style="width:100%">{% autoescape false %}{{ operators }}{% endautoescape %}</select>
	</div>

	<div class="form-group" style="width:300px;">
		<input class="value form-control" type="text" name="adv[aa][value]"  style="width:100%" />
	</div>

	<div class="form-group">
		<button type="button" class="btn btn-default btn-sm get-values" onclick="search.getValues($(this).parents('fieldset'))">
			<i class="glyphicon glyphicon glyphicon-fire"></i>
		</button>
	</div>

	<span class="checklabel form-group">
		<input type="checkbox" name="adv[aa][)]" />
		<label>)</label>
	</span>
</fieldset>
