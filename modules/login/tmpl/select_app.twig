<div class="container" id="select_apps">

	<div class="clearfix">
		<div class="pull-left">
			<h2>BraDypUS web.Databases</h2>
		</div>
		<div class="pull-right">
			<a title="BraDypUS COMMUNICATING CULTURAL HERITAGE" target="_blank" href="https://bradypus.net" class="pull-right">
				<img alt="BraDypUS COMMUNICATING CULTURAL HERITAGE" src="./img/bradypus.png" />
			</a>
		</div>
	</div>
	
	<div class="btn-container">
	
		<div class="buttons clearfix">
	
			{% if dataApp %}
			<h3>{{ choose_db }}</h3>
			{% endif %}
			<div class="row">
			
			{% for dataApp in data %}
				<div class="col-sm-3 col-xs-6">
					<a class="btn btn-default btn-lg app" href="javascript:void(0)" data-db="{{ dataApp.db }}">
						{{ dataApp.name }}
						<span class="pull-right" style="right:3px; color:#759bbc; position:relative;"><i class="icon-play-sign hidden-xs"></i></span>
					</a>
				</div>
				{% if app and app == dataApp.db %}
					<script>login.loadLoginForm('{{ dataApp.db }}');</script>
				{% endif %}
			{% endfor %}
		</div>
		
		{% if create_app %}
		<div class="text-center">
			<hr>
			<button class="btn btn-lg btn-danger app_create">{{ tr.get('app_create') }}</button>
		</div>
		{% endif %}
		</div>

		
		
		<div class="login"></div>
		
	</div>
	
	
</div>

<div class="footer">
	<a title="BraDypUS COMMUNICATING CULTURAL HERITAGE" target="_blank" href="https://bradypus.net">
		BraDypUS. <small>COMMUNICATING CULTURAL HERITAGE</small><br />
		https://bradypus.net
	</a>
	<br />
	v.<code>{{ version }}</code>
  
  <p class="text-muted">
    <a href="https://github.com/jbogdani/BraDypUS" target="_blank">
      BraDypUS databases is an open source (MIT licensed) software
      available for download on GitHub
    </a>
    <br />
    <a href="https://github.com/jbogdani/BraDypUS/issues" target="_blank">
      Please report any issue you might encounter
    </a>
  </p>
  
</div>

<script>
	$('.app').on('click', function(){
		login.loadLoginForm($(this).data('db'));
	});
	$('.app_create').on('click', function(){
		login.loadCreateApp();
	});
	
</script>